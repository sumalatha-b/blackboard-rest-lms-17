#%RAML 1.0
title: Blackboard
baseUri: https://blackboard.poc.nexturn.com/learn/api/public
protocols: HTTPS
description: The Blackboard  API provides access to core learning management features such as courses, users, enrollments, grades, and content.It enables seamless integration with external applications to manage educationalexperiences, automate course operations, and enhance learning workflows.
mediaType:
  - application/json
  - application/x-www-form-urlencoded

securitySchemes:
  Authorization:
    description: Use a blackboard access token
    type: Pass Through
    describedBy:
      headers:
        Authorization:
          description: "Bearer token"
          type: string
          required: true
      responses:
        401:
          description: Unauthorized
securedBy:
  - Authorization

traits:
  errorResponse: !include /traits/errorResponse-trait.raml
  commonHeaders: !include /traits/commonHeaders-trait.raml

